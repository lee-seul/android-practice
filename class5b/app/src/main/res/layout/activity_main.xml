    </fragment>

    <FrameLayout
        android:id="@+id/fl_right"
        android:background="#3b9dff"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>